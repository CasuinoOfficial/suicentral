
name: Amplify-build
on:
  pull_request:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v3
        with:
          node-version: 22
      - name: Install dependencies
        run: npx pnpm install
      - name: Build
        run: npx pnpm run build
